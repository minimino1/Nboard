<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/keyboard_bg"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/settingsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="Nboard"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="26sp" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_cup_lucide"
                android:tint="?android:attr/textColorPrimary" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/inter_variable"
            android:text="Accounts"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/makeDefaultRow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_settings_card"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_variable"
                android:text="Make it default"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_wrench_lucide"
                android:tint="?android:attr/textColorPrimary" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_variable"
            android:text="Language settings"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_settings_card"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/languageRow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_variable"
                    android:text="Basic autocorrect"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/languageValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/inter_variable"
                    android:text="French"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_chevron_down_lucide"
                    android:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:background="?android:attr/textColorPrimary" />

            <LinearLayout
                android:id="@+id/keyboardRow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_variable"
                    android:text="Layout"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/keyboardValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/inter_variable"
                    android:text="AZERTY"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_chevron_down_lucide"
                    android:tint="?android:attr/textColorPrimary" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_variable"
            android:text="Key settings"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_settings_card"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/leftKeyModesRow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_variable"
                    android:text="Left key modes"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/leftKeyModesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/inter_variable"
                    android:text="AI + Emoji"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_chevron_down_lucide"
                    android:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:background="?android:attr/textColorPrimary" />

            <LinearLayout
                android:id="@+id/rightKeyModesRow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_variable"
                    android:text="Right key modes"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/rightKeyModesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/inter_variable"
                    android:text="Clipboard + Emoji"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_chevron_down_lucide"
                    android:tint="?android:attr/textColorPrimary" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_variable"
            android:text="AI settings"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/apiKeyRow"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_settings_card"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter_variable"
                android:text="Set API Key"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_variable"
                android:text="****************"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_variable"
            android:text="Theme settings"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_settings_card"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/themeRow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_variable"
                    android:text="Theme"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/themeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/inter_variable"
                    android:text="System"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_chevron_down_lucide"
                    android:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:background="?android:attr/textColorPrimary" />

            <LinearLayout
                android:id="@+id/fontRow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_variable"
                    android:text="Font"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fontValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/inter_variable"
                    android:text="Inter"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_chevron_down_lucide"
                    android:tint="?android:attr/textColorPrimary" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_variable"
            android:text="Licences"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_settings_card"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/librariesRow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_variable"
                    android:text="Libraries"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_external_link_lucide"
                    android:tint="?android:attr/textColorPrimary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:background="?android:attr/textColorPrimary" />

            <LinearLayout
                android:id="@+id/authorRow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_variable"
                    android:text="App made by @dotSlimy"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_external_link_lucide"
                    android:tint="?android:attr/textColorPrimary" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
